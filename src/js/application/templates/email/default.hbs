<div class="email-container">
	<div class="email-modal">
		<div class="email-content">
			{{#if custom.logo}}
	            <div class="email-logo"><img src="{{ custom.logo }}" height="55"></div>
			{{/if}}
			{{#if custom.mailHeading}}
			    <h1 class="email-title">{{ custom.mailHeading }}</h1>
			{{else}}
			    <h1 class="email-title">Enter your email to see your results!</h1>
			{{/if}}
			{{#if custom.mailSubheading}}
			    <h2 class="email-subtitle">{{ custom.mailSubheading }}</h2>
			{{else}}
			    <h2 class="email-subtitle">We will send you fun and infrequent updates.</h2>
			{{/if}}
			<div id="email-error" class="alert alert-danger text-center hide">Please enter a valid email address.</div>
			<form id="email-form" action="./" method="post">
			    <input type="text" id="email" value="" class="form-control" placeholder="Enter email here...">
				<div id="submit-buttons">
					<p class="submit-email-container"><input type="submit" class="submit-email" value="See My Results"></p>
					{{#if optout}}
					<p class="skip-link"><a role="button" class="skip">Skip this step</a></p>
					{{/if}}
				</div>
			</form>
		</div>
	</div>
</div>